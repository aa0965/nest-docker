{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "bl/packet-types": ["libs/types/packet-types/src"],
      "bl/packet-types/*": ["libs/types/packet-types/src/*"],
      "bl/devices-types": ["libs/types/devices-types/src"],
      "bl/devices-types/*": ["libs/types/devices-types/src/*"]
    }
  }
}
